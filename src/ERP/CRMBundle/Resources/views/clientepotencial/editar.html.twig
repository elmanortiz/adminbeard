{% block cuerpo %}
      {{parent()}}
      <div class="col-md-10" style="margin-top: 10px;">

         <div class="row">
             {% for data in clientePotencial %}
                 <div class="form-column col-md-6">
                     <div class="form-group required">
                         <input type="hidden" id="idClienteP" value="{{data.id}}">
                         <label for="fecha inicio" class="control-label">Nombre</label>
                         <input type="text" class="form-control requeridoE" id="nombreCp" 
                                placeholder="Nombre del contacto" name="txtcontacto"  required value="{{data.nombre}}">
                     </div>
                     </div>
                     <div class="form-column col-md-6">
                            <div class="form-group required">
                 <label for="fecha inicio" class="control-label">Direccion</label>
                    <input type="text" class="form-control requeridoE" id="direccionCp" 
                           placeholder="Direccion" name="direccionCp"  required value="{{data.direccion}}">
                </div>
                     </div>
                    
                     
                     <div class="clearfix"></div>

                 <div class="col-md-3">
                     <div class="form-group required">
                    <label for="fecha inicio" class="control-label">Telefono</label>
                    <input type="text" class="form-control telefono requeridoE" id="telefonoCp" 
                           placeholder="0000-0000" name="txtrelacion" required value="{{data.telefono}}">
                </div>
                 </div>
                   
                 <div class="col-md-3">
                    <div class="form-group">
                       <label for="fecha inicio" class="control-label ">Telefono Movil</label>
                           <input type="text" class="form-control telefono" id="telefonoMCp" 
                                 value="{{data.movil}}"  >
                   </div>
                 </div>
                 <div class="col-md-3">
                       <div class="form-group">
                           <label for="fecha inicio" class="control-label ">NRC</label>
                           <input type="text" class="form-control" id="nrcCP" 
                                  placeholder="0000-000000-000-0" name="nrcCP" value="{{data.nrc}}">
                       </div>
                   </div>
                  
                   {#<div class="clearfix"></div>   #}
                   <div class="col-md-3">
                       <div class="form-group">
                           <label for="fecha inicio" class="control-label">NIT</label>
                           <input type="text" class="form-control" id="nitCP" 
                                  placeholder="0000-000000-000-0" name="nitCP" value="{{data.nit}}" >
                       </div>
                   </div>
                   
                   <div class="col-md-4">
                    <div class="form-group">
                    <label for="fecha inicio" class="control-label ">Correo Electronico</label>
                    <input type="text" class="form-control correo" id="correoCp" 
                           placeholder="example@yourdomian.com" name="correoCp" value="{{data.correoelectronico}}">
                           <span class="msg error" >Direccion de correo elctronico invalido</span>
                    </div>
                 </div>  
                  
                   <div class="col-md-4">
                       <div class="form-group">
                           <label for="fecha inicio" class="control-label ">Pagina Web</label>
                           <input type="text" class="form-control" id="paginaWebCp" 
                                  placeholder="Direccion web de contacto" name="paginaWebCp" value="{{data.paginaWeb}}">
                       </div>
                   </div>
                    <div class="col-md-4">
                       <div class="form-group">
                           <label for="fecha inicio" class="control-label ">Referido por</label>
                           <input type="text" class="form-control" id="referidoPor" 
                                  placeholder="Quien refirio al posible cliente" name="referidoPor" value="{{data.referidoPor}}">
                       </div>
                   </div>
                   <div class="clearfix"></div> 
                    <div class="col-md-8">
                      <div class="form-group">
                          <label for="fecha inicio" class="control-label ">Descripcion</label>
                          <textarea class="form-control" id="descripcionCp" maxlength="245">{{data.descripcion}}</textarea>
                      </div>   
                    </div>
                   <div class="col-md-4" style="margin-top: 65px;">
                       <div class="btn-group pull-right">
                           <button class="btn btn-default  btn-sm " style="margin-left: 5px;" id="cancelarEdicionCp">Cancelar</button>
                       </div>
                       <div class="btn-group pull-right">
                           <button class="btn btn-primary  btn-sm " style="margin-left: 5px;" id="editarCp">Guardar</button>
                       </div>
                       
                  </div>
             {% endfor %}
                   
                 </div>
    {#row1#}
                 
             
 </div>
 
    
    
{% endblock %}

