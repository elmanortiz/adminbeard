 {% block js_extend %}
    
        <script type="text/javascript">
            $(document).ready(function() {
         
                  $("#contenedorDatosGeneralesClienteN").hide();
                
                $(document).on("change","#busqueda-clienteN", function(){
                    var idCliente = $(this).val();
                     $.ajax({
                                    type: 'POST',
                                    async: false,
                                    dataType: 'json',
                                    data: {idCliente:idCliente},
                                    url: Routing.generate('llamarTotalDeudaCliente'),
                                    success: function (data)
                                    {
                                         if (data.estado==true){
                                                
                                                       
                                                         $('#deudaContenidoN').show(); 
                                                         $("#totalDeudaN").text(data.total);

                                         }
                                         else{
                                             
                                                swal("Error!", "Error al recuperar el valor de la consulta", "error");

                                         }
                                        
                                             
                    
                                         
                                          
                                    },
                                    error: function (xhr, status)
                                    {
                      
                    }
                    });
                    
                      $.ajax({
                                                type: 'POST',
                                                async: false,
                                                dataType: 'json',
                                                data: {id:idCliente},
                                                url: Routing.generate('seleccionarCliente'),
                                                success: function (data)
                                                {
                                                     
                                                
                                                    if (data.estado == true) {
                                                        
                                                        
                                                        
                                                       $("#nombreClienteN").text(data.nombre);
                                                       $("#telefonoClienteN").text(data.telefono);
                                                       $("#direccionClienteN").text(data.direccion);
                                                       
                                                       $("#contenedorDatosGeneralesClienteN").show();

                                                    }

                                                },
                                                error: function (xhr, status)
                                                {
                                                    
                                                }
                                            });
                    
                    
                    
                    
                    
                    
                    
                });                
                
              $(document).on("click","#cancelarAbonoN", function(){
                  
                    var url=Routing.generate('admin_contabilidad_index');
                                                                window.open(url,"_self"); 
                  
                  
                  
              });    
                
                

            });

        </script>

     
      
      
